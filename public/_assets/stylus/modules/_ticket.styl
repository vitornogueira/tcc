.pop-ticket-comment-wrapper
	padding 15px 0 0
	margin 15px 0
	border-top 1px solid #eeeeee
	border-bottom 1px solid #eeeeee

.pop-ticket-comment
	position relative
	margin-bottom 1.5em
	padding 0
	&:after
		content ""
		position absolute
		bottom -24px
		left 5px
		width 3px
		height 22px
		background-color #e9e9e9
	&:last-child
		&:after
			display none

.pop-ticket-comment-header
	padding .75em 1.5em .75em
	background-color #f9f9f9
	border-bottom 1px solid #cccccc
	border-radius 4px 4px 0 0

.pop-ticket-comment-body
	padding .75em 1.5em 1.5em
